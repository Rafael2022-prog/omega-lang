{
  "scopeName": "source.omega",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.omega",
          "match": "//.*$"
        },
        {
          "name": "comment.block.omega",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.omega",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.omega",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.omega",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.omega",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.omega",
          "match": "\\b(blockchain|state|function|constructor|public|private|view|pure|payable|returns|require|emit|mapping|address|uint256|string|bool|event)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.omega",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.omega",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    }
  }
}