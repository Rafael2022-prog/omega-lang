{
  "name": "omega-language-support",
  "displayName": "OMEGA Language Support",
  "description": "Language support for OMEGA blockchain programming language",
  "version": "1.0.0",
  "publisher": "omega-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/omega-lang/omega"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "omega",
    "blockchain",
    "smart-contracts",
    "programming-language"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:omega",
    "onCommand:omega.compile"
  ],
  "contributes": {
    "languages": [
      {
        "id": "omega",
        "aliases": [
          "OMEGA",
          "omega"
        ],
        "extensions": [
          ".mega",
          ".omega"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "omega",
        "scopeName": "source.omega",
        "path": "./syntaxes/omega.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "omega",
        "path": "./snippets/omega.json"
      }
    ],
    "commands": [
      {
        "command": "omega.compile",
        "title": "Compile OMEGA File",
        "category": "OMEGA"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  }
}