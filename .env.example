# OMEGA environment variables (example)
# Copy this file to `.env` and fill with secure values. Do NOT commit your .env.

# Database (PostgreSQL)
POSTGRES_PASSWORD=change_me_strong_postgres_password

# Cache (Redis)
REDIS_PASSWORD=change_me_strong_redis_password

# Grafana admin credentials
GF_SECURITY_ADMIN_PASSWORD=change_me_strong_grafana_password

# Deployment server credentials (use either PASSWORD or SSH KEY)
OMEGA_SERVER_IP=203.0.113.10
OMEGA_SERVER_USER=root
OMEGA_SERVER_PASSWORD=your_password_here
# Alternatively, use SSH key (PuTTY .ppk file on Windows)
OMEGA_SSH_KEY_PATH=C:\Users\you\.ssh\id_rsa.ppk

# Domain used by deployment scripts
OMEGA_SERVER_DOMAIN=example.com

# Runtime environment for services
OMEGA_ENV=development