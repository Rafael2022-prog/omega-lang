{
  "fileAssociations": {
    "*.mega": {
      "language": "omega",
      "icon": {
        "path": "./omega-vscode-extension/images/omega-file-icon-mega.svg",
        "type": "svg"
      },
      "description": "OMEGA Blockchain Source File",
      "mimeType": "text/x-omega",
      "category": "source"
    },
    "*.omega": {
      "language": "omega",
      "icon": {
        "path": "./omega-vscode-extension/images/omega-file-icon-mega.svg",
        "type": "svg"
      },
      "description": "OMEGA Blockchain Source File",
      "mimeType": "text/x-omega",
      "category": "source"
    }
  },
  "languageConfiguration": {
    "omega": {
      "displayName": "OMEGA Blockchain Language",
      "extensions": [".mega", ".omega"],
      "icon": {
        "light": "./omega-vscode-extension/images/omega-file-icon-light.svg",
        "dark": "./omega-vscode-extension/images/omega-file-icon-dark.svg"
      },
      "syntaxHighlighting": {
        "enabled": true,
        "theme": "omega-dark"
      },
      "features": {
        "codeCompletion": true,
        "syntaxValidation": true,
        "semanticHighlighting": true
      }
    }
  },
  "iconTheme": {
    "name": "omega-icons",
    "version": "1.0.0",
    "icons": {
      "mega-file": {
        "iconPath": "./omega-vscode-extension/images/omega-file-icon-mega.svg",
        "fileExtensions": ["mega", "omega"],
        "fileNames": ["*.mega", "*.omega"]
      },
      "omega-logo": {
        "iconPath": "./omega-vscode-extension/images/omega-icon.svg",
        "fileExtensions": [],
        "fileNames": ["omega.toml", "omega-build.toml"]
      }
    }
  }
}